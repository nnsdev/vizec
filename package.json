{
  "name": "vizec",
  "version": "1.0.1",
  "description": "Techno Audio Visualizer - Modular audio visualization with transparent overlay",
  "keywords": [
    "audio",
    "electron",
    "music",
    "techno",
    "visualizer"
  ],
  "license": "MIT",
  "author": "",
  "main": "dist/main/main/index.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "build": "node scripts/build.mjs",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "watch": "tsc -w",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix"
  },
  "dependencies": {
    "p5": "^1.9.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/p5": "^1.7.6",
    "@types/three": "^0.160.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "esbuild-plugin-import-glob": "^0.1",
    "oxlint": "^1.38.0",
    "typescript": "^5.3.2"
  },
  "build": {
    "appId": "com.nns.vizec",
    "productName": "Vizec",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "presets/**/*"
    ],
    "extraResources": [
      {
        "from": "presets",
        "to": "presets"
      },
      {
        "from": "python",
        "to": "python"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
