{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/main/**/*", "src/shared/**/*", "src/visualizations/registry.ts", "src/visualizations/types.ts"],
  "exclude": ["node_modules", "dist"]
}
